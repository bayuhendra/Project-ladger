<zk xmlns:w="client" xmlns:n="native">
    <window apply="org.zkoss.bind.BindComposer"
            viewModel="@id('vm') @init('com.ledger.main.viewmodel.DashboardVM')"
            width="500px" height="530px" form="@id('fx') @load(vm.activaTetapDTO) @save(vm.activaTetapDTO, before='buttonSimpanActivaTetap')" >
        <!-- Modal content-->
        <div>
            <div class="modal-header" align="center">
                <n:h4 class="modal-title"> Data ActivaTetap</n:h4>
            </div>
            <div class="modal-body">
                <div class="input-group">
                    <n:h5 class="modal-title"> Nama Activa Tetap</n:h5>
                    <textbox class="form-control" width="463px" value="@bind(vm.namaActivaTetap) @save(vm.namaActivaTetap, before='buttonSimpanActivaTetap')" constraint="no empty: Nama ActivaTetap tidak boleh kosong"/>
                    <n:h5 class="modal-title"> Nilai Activa Tetap</n:h5>
                    <doublebox class="form-control" format="#,##0.##" width="463px" value="@bind(vm.hargaActivaTetap) @save(vm.hargaActivaTetap, before='buttonSimpanActivaTetap')" constraint="no zero: Jumlah ActivaTetap tidak boleh 0"/>
                    <n:h5 class="modal-title"> Lama Pemakaian</n:h5>
                    <intbox class="form-control" width="463px" value="@bind(vm.lamaPemakaian) @save(vm.lamaPemakaian, before='buttonSimpanActivaTetap')" constraint="no empty: Jumlah ActivaTetap tidak boleh kosong, no zero: Jumlah ActivaTetap tidak boleh 0"/>
                    <n:h5 class="modal-title"> Jangka Waktu Penyusutan</n:h5>
                    <intbox class="form-control" width="463px" value="@bind(vm.jangkaWaktuPenyusutan) @save(vm.jangkaWaktuPenyusutan, before='buttonSimpanActivaTetap')" constraint="no empty: Jumlah ActivaTetap tidak boleh kosong, no zero: Jumlah ActivaTetap tidak boleh 0"/>
                    <n:h5 class="modal-title"> Persen Penyusutan</n:h5>
                    <intbox class="form-control" width="463px" value="@bind(vm.persenPenyusutan) @save(vm.persenPenyusutan, before='buttonSimpanActivaTetap')" constraint="no empty: Jumlah ActivaTetap tidak boleh kosong, no zero: Jumlah ActivaTetap tidak boleh 0"/>
                    <n:h5 class="modal-title"> Total Nilai Penyusutan</n:h5>
                    <doublebox class="form-control" format="#,##0.##" width="463px" value="@load((vm.hargaActivaTetap/vm.jangkaWaktuPenyusutan)*(vm.jangkaWaktuPenyusutan-vm.lamaPemakaian)*(vm.persenPenyusutan/100))" readonly="true"/>
                </div>
                <separator width="3px"/>
            </div>
            <div class="modal-footer">
                <button sclass="btn-danger" label="Close" onClick="@command('buttonKembaliActivaTetap')" />
                <button sclass="btn-success" label="Simpan" onClick="@command('buttonSimpanActivaTetap')" />
            </div>
        </div>
    </window>
</zk>